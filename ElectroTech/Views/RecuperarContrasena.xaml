<Window x:Class="ElectroTech.Views.RecuperarContrasenaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views"
        mc:Ignorable="d"
        Title="Recuperar Contraseña" Height="478" Width="500"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Background="White" Margin="15" CornerRadius="8">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Recuperar Contraseña" 
                         FontSize="24" 
                         FontWeight="SemiBold" 
                         Foreground="#2E5D7D"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>
                <TextBlock Text="Por favor, ingresa tu correo electrónico para recibir instrucciones de recuperación." 
                         TextWrapping="Wrap"
                         FontSize="14"
                         TextAlignment="Center"
                         Margin="0,0,0,30"/>
            </StackPanel>

            <!-- Formulario (ahora solo con correo) -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Correo Electrónico:" 
                         FontSize="14" 
                         Margin="0,0,0,5"/>
                <TextBox x:Name="txtCorreo" 
                       Height="40" 
                       FontSize="14" 
                       Padding="10,5"
                       Margin="0,0,0,20"
                       BorderThickness="1"
                       BorderBrush="#DDDDDD"/>

                <Button x:Name="btnEnviar" 
                      Content="Enviar Instrucciones" 
                      Height="45" 
                      Background="#2E5D7D" 
                      Foreground="White" 
                      FontSize="16" 
                      FontWeight="SemiBold"
                      Margin="0,10,0,0"
                      Click="btnEnviar_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock x:Name="txtMensaje" 
                         Foreground="Gray" 
                         FontSize="14"
                         TextWrapping="Wrap" 
                         TextAlignment="Center"
                         Margin="0,20,0,0"
                         Visibility="Collapsed"/>
            </StackPanel>

            <!-- Botón Volver -->
            <Button Grid.Row="2" 
                  x:Name="btnVolver" 
                  Content="Volver a Inicio de Sesión" 
                  Height="40" 
                  Background="Transparent" 
                  Foreground="#2E5D7D" 
                  FontSize="14" 
                  BorderThickness="1"
                  BorderBrush="#2E5D7D"
                  Margin="0,20,0,0"
                  Click="btnVolver_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>