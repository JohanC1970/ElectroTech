<Window x:Class="ElectroTech.Views.Compras.CompraDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Compras"
        xmlns:helpers="clr-namespace:ElectroTech.Helpers"
        mc:Ignorable="d"
        Title="Detalle de Compra" 
        Height="780" 
        Width="950"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="700"
        MinWidth="900">

    <Window.Resources>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <!-- Estilo para etiquetas de campos -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Estilo para campos de entrada -->
        <Style x:Key="InputFieldStyle" TargetType="Control">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock x:Name="txtTitulo" 
                     Text="Nueva Orden de Compra" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Datos de la compra -->
                <GroupBox Grid.Row="0" 
                        Header="Información de la Orden" 
                        Margin="0,0,0,15" 
                        Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Número de Orden -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5,15,5">
                            <TextBlock Text="Número de Orden *" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox x:Name="txtNumeroOrden" 
                                   Style="{StaticResource InputFieldStyle}"
                                   MaxLength="20"
                                   IsEnabled="{Binding ElementName=chkGenerarNumero, Path=IsChecked, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Generar Número Automático -->
                        <CheckBox x:Name="chkGenerarNumero" 
                                Grid.Row="1" 
                                Grid.Column="0" 
                                Content="Generar número automáticamente" 
                                Margin="0,5,15,5"
                                FontSize="13"
                                IsChecked="False"
                                Checked="chkGenerarNumero_Checked"
                                Unchecked="chkGenerarNumero_Unchecked"/>

                        <!-- Fecha -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,5">
                            <TextBlock Text="Fecha de la Orden *" Style="{StaticResource FieldLabelStyle}"/>
                            <DatePicker x:Name="dtpFecha" 
                                      Style="{StaticResource InputFieldStyle}"
                                      SelectedDate="{Binding Fecha}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="15,5,0,5">
                            <TextBlock Text="Estado de la Orden *" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="cmbEstado" 
                                    Style="{StaticResource InputFieldStyle}">
                                <ComboBoxItem Content="Pendiente" Tag="P"/>
                                <ComboBoxItem Content="Recibida" Tag="R"/>
                                <ComboBoxItem Content="Cancelada" Tag="C"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Proveedor -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="15,5,0,5">
                            <TextBlock Text="Proveedor *" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox x:Name="cmbProveedor" 
                                    Style="{StaticResource InputFieldStyle}"
                                    DisplayMemberPath="Nombre"
                                    SelectedValuePath="IdProveedor"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Observaciones -->
                <GroupBox Grid.Row="1" 
                        Header="Observaciones" 
                        Margin="0,0,0,15" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Notas adicionales sobre la orden de compra" 
                                 Style="{StaticResource FieldLabelStyle}"/>
                        <TextBox x:Name="txtObservaciones"
                               Height="60"
                               Padding="8,5"
                               FontSize="14"
                               BorderBrush="#CCCCCC"
                               BorderThickness="1"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"
                               MaxLength="500"/>
                    </StackPanel>
                </GroupBox>

                <!-- Mensajes de error - MOVIDO AQUÍ para mayor visibilidad -->
                <Border x:Name="errorBorder" 
                      Grid.Row="2" 
                      Background="#FFEBEE"
                      BorderBrush="#F44336"
                      BorderThickness="2"
                      CornerRadius="4"
                      Padding="15"
                      Margin="0,10,0,15"
                      MinHeight="50"
                      Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠" 
                                 FontSize="18" 
                                 Foreground="#D32F2F" 
                                 Margin="0,0,15,0"
                                 VerticalAlignment="Top"
                                 FontWeight="Bold"/>
                        <TextBlock x:Name="txtError" 
                                 Foreground="#D32F2F" 
                                 FontWeight="SemiBold"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Center"
                                 LineHeight="18"
                                 MaxWidth="800"/>
                    </StackPanel>
                </Border>

                <!-- Detalle de Productos -->
                <GroupBox Grid.Row="3" 
                        Header="Detalle de Productos" 
                        Margin="0,0,0,15" 
                        Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Encabezados descriptivos -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                     Text="Producto a Comprar" 
                                     Style="{StaticResource FieldLabelStyle}"
                                     Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" 
                                     Text="Cantidad" 
                                     Style="{StaticResource FieldLabelStyle}"
                                     TextAlignment="Center"
                                     Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="2" 
                                     Text="Precio Unitario de Compra" 
                                     Style="{StaticResource FieldLabelStyle}"
                                     TextAlignment="Center"
                                     TextWrapping="Wrap"
                                     Margin="0,0,10,0"/>
                        </Grid>

                        <!-- Agregar Producto -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Producto -->
                            <ComboBox x:Name="cmbProducto" 
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource InputFieldStyle}"
                                    DisplayMemberPath="Nombre"
                                    SelectedValuePath="IdProducto"/>

                            <!-- Cantidad -->
                            <TextBox x:Name="txtCantidad" 
                                   Grid.Column="1"
                                   Margin="0,0,10,0"
                                   Style="{StaticResource InputFieldStyle}"
                                   PreviewTextInput="txtCantidad_PreviewTextInput"
                                   Text="1"
                                   TextAlignment="Center"/>

                            <!-- Precio Unitario de Compra -->
                            <TextBox x:Name="txtPrecioUnitario" 
                                   Grid.Column="2"
                                   Margin="0,0,10,0"
                                   Style="{StaticResource InputFieldStyle}"
                                   PreviewTextInput="txtPrecioUnitario_PreviewTextInput"
                                   LostFocus="txtPrecioUnitario_LostFocus"
                                   TextAlignment="Right"/>

                            <!-- Botón Agregar -->
                            <Button x:Name="btnAgregarProducto" 
                                  Grid.Column="3"
                                  Content="Agregar Producto" 
                                  Height="35"
                                  Padding="15,0"
                                  Background="#388E3C"
                                  Foreground="White"
                                  BorderThickness="0"
                                  FontWeight="SemiBold"
                                  Click="btnAgregarProducto_Click"/>
                        </Grid>

                        <!-- Lista de Productos -->
                        <DataGrid x:Name="dgDetalles" 
                                Grid.Row="2"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                SelectionMode="Single"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                RowBackground="White"
                                AlternatingRowBackground="#F8F8F8"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                HorizontalGridLinesBrush="#EEEEEE"
                                Height="180">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Código" 
                                                  Binding="{Binding Producto.Codigo}" 
                                                  Width="100"/>
                                <DataGridTextColumn Header="Producto" 
                                                  Binding="{Binding Producto.Nombre}" 
                                                  Width="*"/>
                                <DataGridTextColumn Header="Cantidad" 
                                                  Binding="{Binding Cantidad}" 
                                                  Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Precio Unitario" 
                                                  Binding="{Binding PrecioUnitario, StringFormat=C}" 
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Subtotal" 
                                                  Binding="{Binding Subtotal, StringFormat=C}" 
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Eliminar" 
                                                  Margin="2" 
                                                  Padding="8,3"
                                                  Background="#D32F2F"
                                                  Foreground="White"
                                                  BorderThickness="0"
                                                  FontSize="12"
                                                  Click="btnEliminarDetalle_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <!-- Resumen Financiero -->
                <GroupBox Grid.Row="4" 
                        Header="Resumen Financiero" 
                        Margin="0,0,0,15" 
                        Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Subtotal -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                 Text="Subtotal (antes de impuestos):" 
                                 Style="{StaticResource FieldLabelStyle}"
                                 HorizontalAlignment="Right"
                                 Margin="0,5,15,5"/>
                        <TextBox x:Name="txtSubtotal" 
                               Grid.Row="0" 
                               Grid.Column="1"
                               Style="{StaticResource InputFieldStyle}"
                               IsReadOnly="True"
                               Text="0.00"
                               TextAlignment="Right"
                               Background="#F5F5F5"/>

                        <!-- Impuestos -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                 Text="Impuestos y otros cargos:" 
                                 Style="{StaticResource FieldLabelStyle}"
                                 HorizontalAlignment="Right"
                                 Margin="0,5,15,5"/>
                        <TextBox x:Name="txtImpuestos" 
                               Grid.Row="1" 
                               Grid.Column="1"
                               Style="{StaticResource InputFieldStyle}"
                               PreviewTextInput="txtImpuestos_PreviewTextInput"
                               LostFocus="txtImpuestos_LostFocus"
                               TextChanged="txtImpuestos_TextChanged"
                               Text="0.00"
                               TextAlignment="Right"/>

                        <!-- Total -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                 Text="Total de la Orden:" 
                                 FontSize="16" 
                                 FontWeight="Bold"
                                 Foreground="#2E5D7D"
                                 HorizontalAlignment="Right"
                                 Margin="0,10,15,5"/>
                        <TextBox x:Name="txtTotal" 
                               Grid.Row="2" 
                               Grid.Column="1"
                               Height="40"
                               Padding="8,5"
                               FontSize="16"
                               FontWeight="Bold"
                               BorderBrush="#2E5D7D"
                               BorderThickness="2"
                               Background="#F0F8FF"
                               Foreground="#2E5D7D"
                               IsReadOnly="True"
                               Text="0.00"
                               TextAlignment="Right"/>
                    </Grid>
                </GroupBox>

                <!-- Campos obligatorios -->
                <TextBlock Grid.Row="5" 
                         Text="* Campos obligatorios" 
                         Foreground="#666666" 
                         FontStyle="Italic"
                         Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <Grid>
                <StackPanel x:Name="pnlBotonesVista" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Visibility="Collapsed">
                    <Button x:Name="btnRecibir" 
                          Content="Recibir Productos" 
                          Width="150" 
                          Height="35"
                          Background="#388E3C"
                          Foreground="White"
                          BorderThickness="0"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"
                          Click="btnRecibir_Click"
                          Visibility="Collapsed"/>
                    <Button x:Name="btnCerrar" 
                          Content="Cerrar" 
                          Width="100" 
                          Height="35"
                          Background="#2E5D7D"
                          Foreground="White"
                          BorderThickness="0"
                          FontWeight="SemiBold"
                          Click="btnCerrar_Click"/>
                </StackPanel>

                <StackPanel x:Name="pnlBotonesEdicion" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Visibility="Collapsed">
                    <Button x:Name="btnCancelar" 
                          Content="Cancelar" 
                          Width="100" 
                          Height="35"
                          Background="White"
                          Foreground="#333333"
                          BorderBrush="#CCCCCC"
                          BorderThickness="1"
                          FontWeight="SemiBold"
                          Margin="0,0,10,0"
                          Click="btnCancelar_Click"/>
                    <Button x:Name="btnGuardar" 
                          Content="Guardar Orden" 
                          Width="120" 
                          Height="35"
                          Background="#2E5D7D"
                          Foreground="White"
                          BorderThickness="0"
                          FontWeight="SemiBold"
                          Click="btnGuardar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>