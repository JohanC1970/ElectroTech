<Window x:Class="ElectroTech.Views.Compras.CompraDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Compras"
        mc:Ignorable="d"
        Title="Detalle de Compra" 
        Height="680" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock x:Name="txtTitulo" 
                     Text="Nueva Orden de Compra" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Datos de la compra -->
                <GroupBox Grid.Row="0" 
                        Header="Información de la Orden" 
                        Margin="0,0,0,15" 
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Número de Orden -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5,10,5">
                            <TextBlock Text="Número de Orden *" FontSize="14" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtNumeroOrden" 
                                   Height="35" 
                                   Padding="8,5"
                                   FontSize="14"
                                   MaxLength="20"
                                   IsEnabled="{Binding ElementName=chkGenerarNumero, Path=IsChecked, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Generar Número Automático -->
                        <CheckBox x:Name="chkGenerarNumero" 
                                Grid.Row="1" 
                                Grid.Column="0" 
                                Content="Generar número automáticamente" 
                                Margin="0,5,10,5"
                                IsChecked="True"
                                Checked="chkGenerarNumero_Checked"
                                Unchecked="chkGenerarNumero_Unchecked"/>

                        <!-- Fecha -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,5">
                            <TextBlock Text="Fecha *" FontSize="14" Margin="0,0,0,3"/>
                            <DatePicker x:Name="dtpFecha" 
                                      Height="35" 
                                      Padding="8,5"
                                      FontSize="14"
                                      SelectedDate="{Binding Fecha}"/>
                        </StackPanel>

                        <!-- Estado -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,5,0,5">
                            <TextBlock Text="Estado *" FontSize="14" Margin="0,0,0,3"/>
                            <ComboBox x:Name="cmbEstado" 
                                    Height="35" 
                                    Padding="8,5"
                                    FontSize="14">
                                <ComboBoxItem Content="Pendiente" Tag="P"/>
                                <ComboBoxItem Content="Recibida" Tag="R"/>
                                <ComboBoxItem Content="Cancelada" Tag="C"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Proveedor -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,5,0,5">
                            <TextBlock Text="Proveedor *" FontSize="14" Margin="0,0,0,3"/>
                            <ComboBox x:Name="cmbProveedor" 
                                    Height="35" 
                                    Padding="8,5"
                                    FontSize="14"
                                    DisplayMemberPath="Nombre"
                                    SelectedValuePath="IdProveedor"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Observaciones -->
                <GroupBox Grid.Row="1" 
                        Header="Observaciones" 
                        Margin="0,0,0,15" 
                        Padding="10">
                    <TextBox x:Name="txtObservaciones"
                           Height="60"
                           Padding="8,5"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           MaxLength="500"/>
                </GroupBox>

                <!-- Detalle de Productos -->
                <GroupBox Grid.Row="2" 
                        Header="Detalle de Productos" 
                        Margin="0,0,0,15" 
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Agregar Producto -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Producto -->
                            <ComboBox x:Name="cmbProducto" 
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Padding="8,5"
                                    FontSize="14"
                                    Height="35"
                                    DisplayMemberPath="Nombre"
                                    SelectedValuePath="IdProducto"/>

                            <!-- Cantidad -->
                            <TextBox x:Name="txtCantidad" 
                                   Grid.Column="1"
                                   Margin="0,0,10,0"
                                   Padding="8,5"
                                   FontSize="14"
                                   Height="35"
                                   PreviewTextInput="txtCantidad_PreviewTextInput"
                                   Text="1"/>

                            <!-- Precio -->
                            <TextBox x:Name="txtPrecioUnitario" 
                                   Grid.Column="2"
                                   Margin="0,0,10,0"
                                   Padding="8,5"
                                   FontSize="14"
                                   Height="35"
                                   PreviewTextInput="txtPrecioUnitario_PreviewTextInput"
                                   LostFocus="txtPrecioUnitario_LostFocus"/>

                            <!-- Botón Agregar -->
                            <Button x:Name="btnAgregarProducto" 
                                  Grid.Column="3"
                                  Content="Agregar" 
                                  Height="35"
                                  Padding="15,0"
                                  Click="btnAgregarProducto_Click"/>
                        </Grid>

                        <!-- Lista de Productos -->
                        <DataGrid x:Name="dgDetalles" 
                                Grid.Row="1"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                SelectionMode="Single"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                  RowBackground="White"
                                AlternatingRowBackground="#F8F8F8"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                HorizontalGridLinesBrush="#EEEEEE"
                                Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Código" Binding="{Binding Producto.Codigo}" Width="100"/>
                                <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario, StringFormat=C}" Width="120"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                                <DataGridTemplateColumn Header="Acciones" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Eliminar" 
                                                  Margin="2" 
                                                  Padding="8,3"
                                                  Click="btnEliminarDetalle_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <!-- Resumen -->
                <GroupBox Grid.Row="3" 
                        Header="Resumen" 
                        Margin="0,0,0,15" 
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Subtotal -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                 Text="Subtotal:" 
                                 FontSize="14" 
                                 HorizontalAlignment="Right"
                                 Margin="0,5,10,5"/>
                        <TextBox x:Name="txtSubtotal" 
                               Grid.Row="0" 
                               Grid.Column="1"
                               Padding="8,5"
                               FontSize="14"
                               IsReadOnly="True"
                               Text="0.00"
                               TextAlignment="Right"/>

                        <!-- Impuestos -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                 Text="Impuestos:" 
                                 FontSize="14" 
                                 HorizontalAlignment="Right"
                                 Margin="0,5,10,5"/>
                        <TextBox x:Name="txtImpuestos" 
                               Grid.Row="1" 
                               Grid.Column="1"
                               Padding="8,5"
                               FontSize="14"
                               PreviewTextInput="txtImpuestos_PreviewTextInput"
                               LostFocus="txtImpuestos_LostFocus"
                               TextChanged="txtImpuestos_TextChanged"
                               Text="0.00"
                               TextAlignment="Right"/>

                        <!-- Total -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                 Text="Total:" 
                                 FontSize="16" 
                                 FontWeight="Bold"
                                 HorizontalAlignment="Right"
                                 Margin="0,5,10,5"/>
                        <TextBox x:Name="txtTotal" 
                               Grid.Row="2" 
                               Grid.Column="1"
                               Padding="8,5"
                               FontSize="16"
                               FontWeight="Bold"
                               IsReadOnly="True"
                               Text="0.00"
                               TextAlignment="Right"/>
                    </Grid>
                </GroupBox>

                <!-- Mensajes de error -->
                <TextBlock x:Name="txtError" 
                         Grid.Row="4" 
                         Foreground="Red" 
                         TextWrapping="Wrap" 
                         Margin="0,10,0,0"
                         Visibility="Collapsed"/>

                <!-- Campos obligatorios -->
                <TextBlock Grid.Row="5" 
                         Text="* Campos obligatorios" 
                         Foreground="#555555" 
                         Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <Grid>
                <StackPanel x:Name="pnlBotonesVista" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Visibility="Collapsed">
                    <Button x:Name="btnRecibir" 
                          Content="Recibir Productos" 
                          Width="150" 
                          Height="35"
                          Background="#388E3C"
                          Foreground="White"
                          Margin="0,0,10,0"
                          Click="btnRecibir_Click"
                          Visibility="Collapsed"/>
                    <Button x:Name="btnCerrar" 
                          Content="Cerrar" 
                          Width="100" 
                          Height="35"
                          Background="#2E5D7D"
                          Foreground="White"
                          Click="btnCerrar_Click"/>
                </StackPanel>

                <StackPanel x:Name="pnlBotonesEdicion" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Visibility="Collapsed">
                    <Button x:Name="btnCancelar" 
                          Content="Cancelar" 
                          Width="100" 
                          Height="35"
                          Background="White"
                          Foreground="#333333"
                          BorderBrush="#CCCCCC"
                          BorderThickness="1"
                          Margin="0,0,10,0"
                          Click="btnCancelar_Click"/>
                    <Button x:Name="btnGuardar" 
                          Content="Guardar" 
                          Width="100" 
                          Height="35"
                          Background="#2E5D7D"
                          Foreground="White"
                          BorderThickness="0"
                          Click="btnGuardar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>