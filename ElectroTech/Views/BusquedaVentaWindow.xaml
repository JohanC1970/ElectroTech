<Window x:Class="ElectroTech.Views.Devoluciones.BusquedaVentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Devoluciones"
        mc:Ignorable="d"
        Title="Buscar Venta" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock Text="Buscar Venta para Devolución" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="1" Margin="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Búsqueda -->
            <TextBox x:Name="txtBuscar" 
                   Grid.Column="0" 
                   Margin="0,0,10,0"
                   Padding="10,8"
                   FontSize="14"
                   VerticalContentAlignment="Center"
                   KeyDown="txtBuscar_KeyDown"
                   ToolTip="Ingrese número de factura, cliente o fecha (dd/mm/aaaa)"/>

            <!-- Botón de buscar -->
            <Button x:Name="btnBuscar" 
                  Grid.Column="1"
                  Content="Buscar" 
                  Width="100" 
                  Padding="15,8"
                  FontSize="14"
                  Click="btnBuscar_Click"/>
        </Grid>

        <!-- Lista de ventas -->
        <DataGrid x:Name="dgVentas" 
                Grid.Row="2"
                Margin="20,0,20,0"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                SelectionMode="Single"
                SelectionChanged="dgVentas_SelectionChanged"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                RowBackground="White"
                AlternatingRowBackground="#F8F8F8"
                HeadersVisibility="Column"
                GridLinesVisibility="Horizontal"
                HorizontalGridLinesBrush="#EEEEEE"
                CanUserSortColumns="True"
                CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nº Factura" Binding="{Binding NumeroFactura}" Width="120"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="200"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding EstadoDescripcion}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <Border Grid.Row="3" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mensaje informativo -->
                <TextBlock Grid.Column="0" 
                         x:Name="txtInfo" 
                         Text="Seleccione una venta para crear una devolución" 
                         VerticalAlignment="Center"/>

                <!-- Botones -->
                <Button Grid.Column="1" 
                      x:Name="btnCancelar" 
                      Content="Cancelar" 
                      Width="100" 
                      Height="35"
                      Margin="0,0,10,0"
                      Background="White"
                      Foreground="#333333"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      Click="btnCancelar_Click"/>
                <Button Grid.Column="2" 
                      x:Name="btnSeleccionar" 
                      Content="Seleccionar" 
                      Width="100" 
                      Height="35"
                      Background="#2E5D7D"
                      Foreground="White"
                      BorderThickness="0"
                      IsEnabled="False"
                      Click="btnSeleccionar_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>