<Window x:Class="ElectroTech.Views.ProveedorDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views"
        mc:Ignorable="d"
        Title="Detalle de Proveedor" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock x:Name="txtTitulo" 
                     Text="Nuevo Proveedor" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,10">
                    <TextBlock Text="Nombre *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNombre" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Contacto -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5,10,10">
                    <TextBlock Text="Persona de Contacto" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtContacto" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Teléfono -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5,0,10">
                    <TextBlock Text="Teléfono" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtTelefono" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="20"/>
                </StackPanel>

                <!-- Correo -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,10">
                    <TextBlock Text="Correo Electrónico" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtCorreo" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Dirección -->
                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,10">
                    <TextBlock Text="Dirección" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtDireccion" 
                           Height="60" 
                           Padding="8,5"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           MaxLength="200"/>
                </StackPanel>

                <!-- Condiciones de Pago -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,10">
                    <TextBlock Text="Condiciones de Pago" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtCondicionesPago" 
                           Height="60" 
                           Padding="8,5"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           MaxLength="200"/>
                </StackPanel>

                <!-- Estado -->
                <CheckBox x:Name="chkActivo" 
                        Grid.Row="5" 
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="Proveedor Activo" 
                        FontSize="14" 
                        Margin="0,10,0,0"
                        IsChecked="True"/>

                <!-- Mensajes de error -->
                <TextBlock x:Name="txtError" 
                         Grid.Row="6" 
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Foreground="Red" 
                         TextWrapping="Wrap" 
                         Margin="0,10,0,0"
                         Visibility="Collapsed"/>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <TextBlock Text="* Campos obligatorios" 
                         Foreground="#555555" 
                         VerticalAlignment="Center"
                         Margin="0,0,20,0"/>
                <Button x:Name="btnCancelar" 
                      Content="Cancelar" 
                      Width="100" 
                      Height="35"
                      Margin="0,0,10,0"
                      Background="White"
                      Foreground="#333333"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      Click="btnCancelar_Click"/>
                <Button x:Name="btnGuardar" 
                      Content="Guardar" 
                      Width="100" 
                      Height="35"
                      Background="#2E5D7D"
                      Foreground="White"
                      BorderThickness="0"
                      Click="btnGuardar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>