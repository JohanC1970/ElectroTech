<Window x:Class="ElectroTech.Views.Ventas.FacturaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Ventas"
        mc:Ignorable="d"
        Title="Factura" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Contenido de la factura -->
        <RichTextBox x:Name="rtbFactura" 
                   Grid.Row="0" 
                   Margin="20" 
                   IsReadOnly="True" 
                   FontFamily="Consolas" 
                   VerticalScrollBarVisibility="Auto"
                   BorderThickness="1"
                   BorderBrush="#DDDDDD"
                   Background="White">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Cargando factura..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <!-- Botones -->
        <StackPanel Grid.Row="1" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Right" 
                  Margin="20">
            <Button x:Name="btnImprimir" 
                  Content="Imprimir" 
                  Width="100" 
                  Height="35"
                  Margin="0,0,10,0"
                  Click="btnImprimir_Click"/>
            <Button x:Name="btnCerrar" 
                  Content="Cerrar" 
                  Width="100" 
                  Height="35"
                  Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>