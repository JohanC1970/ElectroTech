<Window x:Class="ElectroTech.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views"
        mc:Ignorable="d"
        Title="ElectroTech - Login" Height="530" Width="800" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo (imagen/logo) -->
        <Border Grid.Column="0" Background="#2E5D7D">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/ElectroTech;component/Resources/electrotech_logo.png" 
                       Width="250" Height="250" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="Sistema de Gestión de Inventario" 
                           FontSize="22" 
                           FontWeight="Medium" 
                           Foreground="White" 
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="ElectroTech" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Panel derecho (formulario de login) -->
        <Border Grid.Column="1" Background="White">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título del formulario -->
                <TextBlock Grid.Row="0" 
                           Text="Iniciar Sesión" 
                           FontSize="28" 
                           FontWeight="SemiBold" 
                           Foreground="#2E5D7D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Formulario -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Usuario:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsuario" 
                             Height="40" 
                             FontSize="14" 
                             Padding="10,5"
                             Margin="0,0,0,20"
                             BorderThickness="1"
                             BorderBrush="#DDDDDD"/>

                    <TextBlock Text="Contraseña:" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtContrasena" 
                                 Height="40" 
                                 FontSize="14" 
                                 Padding="10,5"
                                 Margin="0,0,0,20"
                                 BorderThickness="1"
                                 BorderBrush="#DDDDDD"/>

                    <Button x:Name="btnIngresar" 
                            Content="Ingresar" 
                            Height="45" 
                            Background="#2E5D7D" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold"
                            Margin="0,10,0,0"
                            Click="btnIngresar_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <TextBlock x:Name="txtError" 
                               Foreground="Red" 
                               FontSize="14"
                               TextWrapping="Wrap" 
                               TextAlignment="Center"
                               Margin="0,15,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Enlaces -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <Button x:Name="btnRecuperarContrasena" 
                            Content="¿Olvidaste tu contraseña?" 
                            FontSize="14" 
                            Background="Transparent" 
                            BorderThickness="0" 
                            Foreground="#2E5D7D"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,10" 
                            Cursor="Hand"
                            Click="btnRecuperarContrasena_Click"/>

                    <TextBlock Text="Contacta a tu administrador si necesitas una cuenta"
                               FontSize="12"
                               Foreground="Gray"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>