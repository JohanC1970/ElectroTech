<Page x:Class="ElectroTech.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectroTech.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Dashboard">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Dashboard" 
                     FontSize="28" 
                     FontWeight="SemiBold" 
                     Foreground="#2E5D7D"/>
            <TextBlock Text="Bienvenido al Sistema de Gestión ElectroTech" 
                     FontSize="16" 
                     Foreground="#555555" 
                     Margin="0,5,0,20"/>
        </StackPanel>

        <!-- Tarjetas de información -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tarjeta Productos -->
            <Border Grid.Column="0" 
                   Background="#F0F9FF" 
                   Margin="0,0,10,0" 
                   CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="Productos" 
                             FontSize="16" 
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalProductos" 
                             Text="0" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="#2E5D7D" 
                             Margin="0,10,0,5"/>
                    <TextBlock Text="Total en inventario" 
                             FontSize="14" 
                             Foreground="#555555"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta Ventas -->
            <Border Grid.Column="1" 
                   Background="#F2FFF0" 
                   Margin="10,0" 
                   CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="Ventas" 
                             FontSize="16" 
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalVentas" 
                             Text="$0.00" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="#388E3C" 
                             Margin="0,10,0,5"/>
                    <TextBlock Text="Ventas del mes" 
                             FontSize="14" 
                             Foreground="#555555"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta Clientes -->
            <Border Grid.Column="2" 
                   Background="#FFF8F0" 
                   Margin="10,0" 
                   CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="Clientes" 
                             FontSize="16" 
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalClientes" 
                             Text="0" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="#F0A830" 
                             Margin="0,10,0,5"/>
                    <TextBlock Text="Registrados" 
                             FontSize="14" 
                             Foreground="#555555"/>
                </StackPanel>
            </Border>

            <!-- Tarjeta Alertas -->
            <Border Grid.Column="3" 
                   Background="#FFF0F0" 
                   Margin="10,0,0,0" 
                   CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="Alertas" 
                             FontSize="16" 
                             FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTotalAlertas" 
                             Text="0" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="#D32F2F" 
                             Margin="0,10,0,5"/>
                    <TextBlock Text="Stock bajo mínimo" 
                             FontSize="14" 
                             Foreground="#555555"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Secciones adicionales -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Productos de Stock Bajo -->
            <Border Grid.Column="0" 
                   Background="White" 
                   BorderBrush="#EEEEEE" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Margin="0,0,10,0">
                <DockPanel Margin="15">
                    <TextBlock Text="Productos con Stock Bajo" 
                             DockPanel.Dock="Top" 
                             FontSize="18" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>
                    <ListView x:Name="lstProductosBajoStock" 
                            BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Código" 
                                              DisplayMemberBinding="{Binding Codigo}" 
                                              Width="100"/>
                                <GridViewColumn Header="Producto" 
                                              DisplayMemberBinding="{Binding Nombre}" 
                                              Width="200"/>
                                <GridViewColumn Header="Disponible" 
                                              DisplayMemberBinding="{Binding CantidadDisponible}" 
                                              Width="80"/>
                                <GridViewColumn Header="Mínimo" 
                                              DisplayMemberBinding="{Binding StockMinimo}" 
                                              Width="80"/>
                                <GridViewColumn Header="Categoría" 
                                              DisplayMemberBinding="{Binding NombreCategoria}" 
                                              Width="150"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Actividad Reciente -->
            <Border Grid.Column="1" 
                   Background="White" 
                   BorderBrush="#EEEEEE" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Margin="10,0,0,0">
                <DockPanel Margin="15">
                    <TextBlock Text="Actividad Reciente" 
                             DockPanel.Dock="Top" 
                             FontSize="18" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,15"/>
                    <ListView x:Name="lstActividad" 
                            BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,5">
                                    <TextBlock Text="{Binding Descripcion}" 
                                             FontWeight="Medium"/>
                                    <StackPanel Orientation="Horizontal" 
                                              Margin="0,3,0,0">
                                        <TextBlock Text="{Binding Usuario}" 
                                                 Foreground="#555555" 
                                                 FontSize="12"/>
                                        <TextBlock Text=" • " 
                                                 Foreground="#555555" 
                                                 FontSize="12"/>
                                        <TextBlock Text="{Binding Fecha}" 
                                                 Foreground="#555555" 
                                                 FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Page>