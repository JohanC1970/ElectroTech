<Window x:Class="ElectroTech.Views.Productos.ProductoDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Productos"
        mc:Ignorable="d"
        Title="Detalle de Producto" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock x:Name="txtTitulo" 
                     Text="Nuevo Producto" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Código -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Código *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtCodigo" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="20"/>
                </StackPanel>

                <!-- Nombre -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Nombre *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNombre" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Categoría -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Categoría *" FontSize="14" Margin="0,0,0,3"/>
                    <ComboBox x:Name="cmbCategoria" 
                            Height="35" 
                            Padding="8,5"
                            FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Nombre}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Marca -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Marca" FontSize="14" Margin="0,0,0,3"/>
                    <ComboBox x:Name="cmbMarca" 
                            Height="35" 
                            Padding="8,5"
                            FontSize="14">
                        <!-- Lista de marcas -->
                    </ComboBox>
                </StackPanel>

                <!-- Modelo -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Modelo" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtModelo" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="50"/>
                </StackPanel>

                <!-- Ubicación en almacén -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Ubicación en Almacén" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtUbicacionAlmacen" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="50"/>
                </StackPanel>

                <!-- Precio de compra -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Precio de Compra *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtPrecioCompra" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           PreviewTextInput="txtPrecioCompra_PreviewTextInput"/>
                </StackPanel>

                <!-- Precio de venta -->
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Precio de Venta *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtPrecioVenta" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           PreviewTextInput="txtPrecioVenta_PreviewTextInput"/>
                </StackPanel>

                <!-- Stock mínimo -->
                <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Stock Mínimo *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtStockMinimo" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           PreviewTextInput="txtStockMinimo_PreviewTextInput"
                           Text="5"/>
                </StackPanel>

                <!-- Stock actual (solo en modo edición) -->
                <StackPanel x:Name="pnlStockActual" 
                          Grid.Row="4" 
                          Grid.Column="1" 
                          Margin="10,5,0,5" 
                          Visibility="Collapsed">
                    <TextBlock Text="Stock Actual" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtStockActual" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           IsEnabled="False"/>
                </StackPanel>

                <!-- Descripción -->
                <StackPanel Grid.Row="5" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2" 
                          Margin="0,5,0,5">
                    <TextBlock Text="Descripción" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtDescripcion" 
                           Height="100" 
                           Padding="8,5"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           MaxLength="500"/>
                </StackPanel>

                <!-- Campos de solo edición -->
                <StackPanel x:Name="pnlCamposEdicion" 
                          Grid.Row="6" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2" 
                          Margin="0,5,0,5" 
                          Visibility="Collapsed">
                    <CheckBox x:Name="chkActivo" 
                            Content="Producto Activo" 
                            FontSize="14" 
                            Margin="0,10,0,0"
                            IsChecked="True"/>
                </StackPanel>

                <!-- Mensajes de error -->
                <TextBlock x:Name="txtError" 
                         Grid.Row="7" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="2" 
                         Foreground="Red" 
                         TextWrapping="Wrap" 
                         Margin="0,10,0,0"
                         Visibility="Collapsed"/>

                <!-- Campos obligatorios -->
                <TextBlock Grid.Row="8" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="2" 
                         Text="* Campos obligatorios" 
                         Foreground="#555555" 
                         Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                      Content="Cancelar" 
                      Width="100" 
                      Height="35"
                      Margin="0,0,10,0"
                      Background="White"
                      Foreground="#333333"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      Click="btnCancelar_Click"/>
                <Button x:Name="btnGuardar" 
                      Content="Guardar" 
                      Width="100" 
                      Height="35"
                      Background="#2E5D7D"
                      Foreground="White"
                      BorderThickness="0"
                      Click="btnGuardar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>