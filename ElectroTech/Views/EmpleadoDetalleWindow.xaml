<Window x:Class="ElectroTech.Views.Empleados.EmpleadoDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroTech.Views.Empleados"
        mc:Ignorable="d"
        Title="Detalle de Empleado" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" 
               Background="#2E5D7D" 
               Padding="20,15">
            <TextBlock x:Name="txtTitulo" 
                     Text="Nuevo Empleado" 
                     FontSize="22" 
                     FontWeight="SemiBold" 
                     Foreground="White"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" 
                    VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Nombre *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNombre" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Apellido -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Apellido *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtApellido" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="100"/>
                </StackPanel>

                <!-- Tipo de Documento -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Tipo de Documento *" FontSize="14" Margin="0,0,0,3"/>
                    <ComboBox x:Name="cmbTipoDocumento" 
                            Height="35" 
                            Padding="8,5"
                            FontSize="14">
                        <ComboBoxItem Content="DNI"/>
                        <ComboBoxItem Content="CE"/>
                        <ComboBoxItem Content="Pasaporte"/>
                    </ComboBox>
                </StackPanel>

                <!-- Número de Documento -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Número de Documento *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtNumeroDocumento" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="20"/>
                </StackPanel>

                <!-- Dirección -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Dirección" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtDireccion" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="200"/>
                </StackPanel>

                <!-- Teléfono -->
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Teléfono *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtTelefono" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           MaxLength="20"
                           PreviewTextInput="txtTelefono_PreviewTextInput"/>
                </StackPanel>

                <!-- Fecha de Contratación -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,5,10,5">
                    <TextBlock Text="Fecha de Contratación *" FontSize="14" Margin="0,0,0,3"/>
                    <DatePicker x:Name="dpFechaContratacion" 
                              Height="35" 
                              Padding="8,5"
                              FontSize="14"/>
                </StackPanel>

                <!-- Salario Base -->
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,5,0,5">
                    <TextBlock Text="Salario Base *" FontSize="14" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtSalarioBase" 
                           Height="35" 
                           Padding="8,5"
                           FontSize="14"
                           PreviewTextInput="txtSalarioBase_PreviewTextInput"/>
                </StackPanel>

                <!-- Información de Usuario -->
                <GroupBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0,5"
                        Header="Información de Usuario">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Checkbox para asociar usuario -->
                        <CheckBox x:Name="chkAsociarUsuario" 
                                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                Content="Asociar una cuenta de usuario al empleado" 
                                Margin="0,5,0,10"
                                Checked="chkAsociarUsuario_Checked"
                                Unchecked="chkAsociarUsuario_Unchecked"/>

                        <!-- Usuario -->
                        <StackPanel x:Name="pnlUsuario" 
                                  Grid.Row="1" Grid.Column="0" 
                                  Margin="0,5,10,5"
                                  Visibility="Collapsed">
                            <TextBlock Text="Nombre de Usuario *" FontSize="14" Margin="0,0,0,3"/>
                            <TextBox x:Name="txtUsuario" 
                                   Height="35" 
                                   Padding="8,5"
                                   FontSize="14"
                                   MaxLength="50"/>
                        </StackPanel>

                        <!-- Nivel de Usuario -->
                        <StackPanel x:Name="pnlNivelUsuario" 
                                  Grid.Row="1" Grid.Column="1" 
                                  Margin="10,5,0,5"
                                  Visibility="Collapsed">
                            <TextBlock Text="Nivel de Usuario *" FontSize="14" Margin="0,0,0,3"/>
                            <ComboBox x:Name="cmbNivelUsuario" 
                                    Height="35" 
                                    Padding="8,5"
                                    FontSize="14">
                                <ComboBoxItem Content="Administrador" Tag="1"/>
                                <ComboBoxItem Content="Paramétrico" Tag="2"/>
                                <ComboBoxItem Content="Esporádico" Tag="3"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Campos de solo edición -->
                <StackPanel x:Name="pnlCamposEdicion" 
                          Grid.Row="5" 
                          Grid.Column="0" 
                          Grid.ColumnSpan="2" 
                          Margin="0,5,0,5" 
                          Visibility="Collapsed">
                    <CheckBox x:Name="chkActivo" 
                            Content="Empleado Activo" 
                            FontSize="14" 
                            Margin="0,10,0,0"
                            IsChecked="True"/>
                </StackPanel>

                <!-- Mensajes de error -->
                <TextBlock x:Name="txtError" 
                         Grid.Row="6" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="2" 
                         Foreground="Red" 
                         TextWrapping="Wrap" 
                         Margin="0,10,0,0"
                         Visibility="Collapsed"/>

                <!-- Campos obligatorios -->
                <TextBlock Grid.Row="7" 
                         Grid.Column="0" 
                         Grid.ColumnSpan="2" 
                         Text="* Campos obligatorios" 
                         Foreground="#555555" 
                         Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" 
               Background="#F5F5F5" 
               BorderBrush="#E0E0E0" 
               BorderThickness="0,1,0,0" 
               Padding="20,15">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right">
                <Button x:Name="btnCancelar" 
                      Content="Cancelar" 
                      Width="100" 
                      Height="35"
                      Margin="0,0,10,0"
                      Background="White"
                      Foreground="#333333"
                      BorderBrush="#CCCCCC"
                      BorderThickness="1"
                      Click="btnCancelar_Click"/>
                <Button x:Name="btnGuardar" 
                      Content="Guardar" 
                      Width="100" 
                      Height="35"
                      Background="#2E5D7D"
                      Foreground="White"
                      BorderThickness="0"
                      Click="btnGuardar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>